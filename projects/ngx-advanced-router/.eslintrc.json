{
  "extends": "../../.eslintrc.json",
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": [
          "projects/ngx-advanced-router/tsconfig.lib.json",
          "projects/ngx-advanced-router/tsconfig.spec.json",
          "projects/ngx-advanced-router/tsconfig.lib.prod.json"
        ],
        "createDefaultProgram": true
      },
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "advancedRouter",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "advancedRouter",
            "style": "kebab-case"
          }
        ],
        "@typescript-eslint/no-unused-vars": [
          "warn",
          {
            "argsIgnorePattern": "^_{1,}$",
            "varsIgnorePattern": "^_{1,}$",
            "caughtErrorsIgnorePattern": "^_{1,}$",
            "destructuredArrayIgnorePattern": "^_{1,}$"
          }
        ],
        "no-unused-vars": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["*.html"],
      "rules": {}
    }
  ],
  "env": {
    "browser": true
  },
}
